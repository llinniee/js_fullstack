                <image src="{{item}}" class="pic-photo" width="100%" />
              </swiper-item>
            </block>
          </swiper>
          <view class="pic-stat">
              <view class="pic-stat_like"></view>
              <view class="pic-stat_rec"></view>
              <view class="pic-stat_col"></view>
              <view class="pic-stat_bar"></view>
            </view>
        </view>
